<view class='page'>
  <view class='page__cd'>
    <view class='list'>
      <input focus  type='text' confirm-type='done' value='{{username}}' bindinput='changeInput' placeholder='输入大学名称或拼音'  confirm-hold bindconfirm='inputConfirm' />
      <view class="weui-icon-clear"  wx:if="{{username.length > 0}}" bindtap="clearInput">
          <icon type="clear" size="14"></icon>
        </view>
    </view>
  </view>
  <view class='page__bg'></view>
</view>