/* pages/myProFile/myProFile.wxss */
@import '../../style/person.wxss';
/*头像  */
._width{
  height: 2rem;
  line-height: 2rem;
}
._width ._head{
  position: absolute;
  right:1.9rem;
  top:0.3rem;
  width:2.7rem;
  height: 2.7rem;
  border-radius:50%;
}
/*文本  */
.list .headText{
  position: absolute;
  right:2rem;
  top:50%;
  transform: translateY(-55%);
  -webkit-transform: translateY(-55%);
}
/*描述  */
.firstText{
  background-color: #e0ebfd;
  text-align:center;
}
/* 多行文本框 */
textarea{
  width:90%;
  height:5rem;
  padding:0.5rem 1rem;
  font-size:0.8rem;
  color:#37383a;
}
.textarea-placeholder{
  font-size:0.8rem;
}
/*picker  */
.weui-picker__action{
  color:#ff5045 !important;
}






