/* pages/changeSkin/customColor.wxss */
/*image  */
.page__view{
  text-align: center;
  width:16rem;
  margin :auto;
  margin-top: 2rem;
}
 .page__view .top{
  height:3rem;
   width:16rem; 
} 
 .page__view .bottom{
  height:23rem;
   width:16rem; 
} 
/*header  */
.header{
  width:16rem;
  height:2rem;
  line-height: 2rem;
  text-align: left;
  margin:auto;
}
.img{
  width: 7.8rem;
  height: 2rem;
}
.isChangeStyle{
  float:right;
}
.isChangeStyle .inline_block{
  height:100%;
  text-align: right;
  padding-right: 0.5rem;
  line-height: 1.91rem;
  position: relative;
}

/*个人中心  */
.person{
  width:1rem;
  height:1rem;
  position:absolute;
  right:1rem;
  top:0.5rem;
}
/*颜色色块*/
.page__bc{
  box-sizing: border-box;
  width:100%;
  height:5rem;
  padding:1rem;
  position: absolute;
  bottom:0;
  left:0;
  border-top:1px solid #e2e3e5;
  white-space: nowrap;
  overflow-x:visible;
  overflow-y:hidden;
}
.page__bc>view{
  width:3rem;
  height: 3rem;
  display: inline-block;
  margin-right:0.5rem;
  border-radius:10px;
  position:relative !important;
  margin-top:0;
}
/*被选中  */
.page__bc>view icon{
  position:absolute;
  bottom:-0.2rem;
  right:-0.2rem;
  background: #fff;
  border-radius: 50%;
}
/*使用  */
#use{
  position:absolute;
  right:0.7rem;
  top:0.5rem;
  font-size:0.9rem;
  color:#ff5045;
}

