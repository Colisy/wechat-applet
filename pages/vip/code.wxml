<view class='page'>
  <view class='page_content activeCode'>
    <view class='tips'><text class='red'>温馨提示：</text> 请在激活码有效期内激活，否则视为无效</view>
    <!--input  -->
    <view class='inputBox'>
      <view>
        <input class='countInput' value='{{verify}}' focus auto-focus bindinput='verify' placeholder-class='input_placeholder' type='text' placeholder='输入激活码' />
        <view class="weui-icon-clear weui_count_clear" wx:if="{{verify.length > 0}}" bindtap="clearInput">
        <icon type="clear" size="14"></icon>
      </view>
      </view>
      
    </view>
    <!--登录按钮  -->
    <button class="weui-btn submit" bindtap='finish'>完成</button>
  </view>
  <!--背景  -->
  <view class='page__bg'></view>
</view>